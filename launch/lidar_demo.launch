<launch>
<!-- Argument to facilitate recording rosbag -->
<arg 
    name="rosbagRecord" 
    default = "false"
/>
<!-- Launch the turtlebot gazebo node -->
<include file= "$(find turtlebot_gazebo)/launch/turtlebot_world.launch" >
<arg name="world_file" value="/opt/ros/kinetic/share/turtlebot_gazebo/worlds/corridor.world"/>
</include>
<!-- Launch Walker Node -->
<node 
    pkg = "ros_geobooks" 
    type = "lidar_node"
    name = "lidar_node"
    output = "screen"
/>
<!-- Record rosbag if prompted -->
<node
    pkg = "rosbag"
    name = "record"
    type = "record"
    args = "-a -x /camera/(.*) -O $(find ros_geobooks)/results/turtlebotWalker.bag"
    output = "screen"
    if = "$(arg rosbagRecord)"
/>  
</launch>
